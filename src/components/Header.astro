---
import navigation from '$content/navigation.json'
import global from '$content/global.json'
const { links, call_to_action } = navigation
---

<header class="desktop-layout">
  <div class="header">
    <div class="logo">
      <a href="/">
        {
          global.logo && (
            <img
              src={global.logo}
              alt={global.site_name}
              width="148"
              height="25"
            />
          )
        }
      </a>
    </div>
    <div class="links">
      <nav>
        <ul class="nav-list">
          {
            links.map((link) => (
              <li>
                <a href={link.url} class="link">
                  {link.text}
                </a>
              </li>
            ))
          }
          {
            call_to_action && (
              <li>
                <a href={call_to_action.url} class="link button accent-2">
                  {call_to_action.text}
                </a>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    display: grid;
    grid-auto-flow: column;
    align-items: center;
    justify-content: space-between;
    padding: var(--size-8) var(--size-5);
    font-size: 0.875rem;
  }

  .nav-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    align-items: center;
    gap: var(--size-8);
  }

  .link.button {
    font-weight: 400;
    padding: 0.75rem var(--size-7);
  }
</style>
