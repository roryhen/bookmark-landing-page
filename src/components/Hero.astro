---
import hero from '$content/sections/hero.json'

let { heading, snippet, featured_image, buttons } = hero
---

<section class="desktop-layout">
  <div class="hero section">
    <div class="media" data-enter="right">
      <img
        class="image"
        src={featured_image.image}
        alt={featured_image.alt}
        width="657"
        height="466"
      />
    </div>
    <div class="content" data-enter data-duration="3">
      <h1 class="heading">{heading}</h1>
      <p class="snippet">
        {snippet}
      </p>
      <div class="actions">
        {
          buttons.map((button, i) => (
            <a href={button.url} class={`button${i !== 0 ? ' invert' : ''}`}>
              {button.text}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    display: grid;
    gap: var(--size-10);
    align-items: center;
  }

  @media (--md-n-above) {
    .hero {
      grid-template-columns: 1fr 1fr;
    }
  }

  .heading,
  .snippet {
    margin: 0;
  }

  .content {
    display: grid;
    gap: var(--size-7);

    @media (--md-n-below) {
      justify-items: center;
      text-align: center;
    }
  }

  .actions {
    display: flex;
    gap: var(--size-4);
  }

  .invert {
    --button-color: var(--text-3);
  }

  .media {
    display: grid;
    grid-template: 1fr 3fr 1rem / 1fr 2fr 2fr;

    @media (--md-n-above) {
      order: 1;
    }
  }

  .image {
    margin: 0 -5%;
    width: 110%;
    height: auto;
    grid-area: 1 / 1 / 3 / -1;
  }

  .media::before {
    content: '';
    display: block;
    grid-area: 2 / 2 / 4 / 3;
    border-radius: var(--radius-round) 0 0 var(--radius-round);
    background-color: var(--accent-1);
  }

  .media::after {
    content: '';
    display: block;
    margin-inline-start: -1px;
    grid-area: 2 / 3 / 4 / 4;
    background-color: var(--accent-1);
    box-shadow: 0 0 0 100vw var(--accent-1);
    clip-path: inset(0 -100vw 0 0);
    z-index: -1;
  }
</style>
